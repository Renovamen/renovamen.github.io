<Layout title={`Coin Info  - ${SITE.title}`}>
  <div class="font-bold absolute h-fit inset-0 m-auto text-center">
    <p id="emoji" text="5xl"></p>
    <!-- <h1 text-2xl m="t-5 b-2">Coin Info</h1> -->
