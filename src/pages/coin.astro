      <span id="info"></span>
      <a id="link">📈</a>
    </div>
  </div>
</Layout>


 


<script>
  const emojiArray = [
    "\\(o_o)/",
    "(o^^)o",
    "(˚Δ˚)b",
    "(^-^*)",
    "(^_^)b",
    "(╯‵□′)╯",
    "(='X'=)",
    "(>_<)",
    "\\(°ˊДˋ°)/",
    "ㄟ(▔▽▔)ㄏ"
  ];

  const emoji = document.querySelector("#emoji");
  if (emoji) emoji.innerHTML = emojiArray[Math.floor(Math.random() * emojiArray.length)];


  // 读取URL参数值
  const data = decodeURI(getQueryVariable('data'));
  
  const info = document.querySelector("#info");
  if (info) {
    info.innerHTML += data;     
  }

    // 超链接
    const link = document.querySelector("#link");
  if (link) link.href = `https://geniidata.com/ordinals/runes/${data}`;

  // 获取URL参数
  function getQueryVariable(variable) {
      var query = window.location.search.substring(1);
      var vars = query.split("&");
      for (var i=0;i<vars.length;i++) {
          var pair = vars[i].split("=");
          if(pair[0] == variable){return pair[1];}
      }
      return(false);
  }

